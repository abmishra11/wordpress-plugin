// jQuery request
jQuery("#frmPostOther").on("click", function(e){
  e.preventDefault();
  jQuery.post(ajaxurl, {action:"custom_plugin", name:"Online Web Tutor", tut:"Wordpress Plugin Development"}, function(response){
    console.log(response);
  });
});

// Plugin function 
add_action("wp_ajax_custom_plugin", "prefix_ajax_custom_plugin");

function prefix_ajax_custom_plugin(){
	print_r($_POST);
	wp_die();
}
